                  <div class="col-md-2">
                    <button class="btn btn-primary btn-sm">Responder</button>
                  </div>

                </div>
              </div>
            <%if(locals.userLogged){%>
              <div class="bg-light p-2">
                <div class="d-flex flex-row align-items-start "><img class="rounded-circle me-1" src="uploads/<%=locals.userLogged[0].FOTO%>"
                    width="40"><textarea class="form-control ml-1 shadow-none textarea"></textarea></div>
                <div class="mt-2 text-right"><button class="btn btn-primary btn-sm shadow-none" type="button">Enviar
                    comentario</button> <button class="btn btn-outline-primary btn-sm ml-1 shadow-none"
                    type="button">Cancel</button></div>
              </div>
            <%}%>
            </div>
          </div>
        </div>
      </div>
      <!--fin card footer-->

    </div>
    <!--fin container-->
